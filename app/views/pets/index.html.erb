<div class="container">
    <%flash.each do |key, value|%>
    <div class='<%= flash_class(key.to_sym) %>'>
        <%= value %>
    </div>

    <%end%>
    <div class="card m-5">
        <div class="card-header">
            <div class="row">
                <div class="col-md-12">
                    <div class="header">
                        <div class="float-left">
                            <h4 class="header-title">Pets</h4>
                        </div>
                        <div class="float-right">
                            <%= link_to "Novo Pet", new_pet_path, class: 'btn btn-sm btn-success' %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-body">
            <% if @pets.any? %>
            <div class="table-responsive">
                <table class='table'>
                    <thead>
                        <tr>
                            <th>Nome</th>
                            <th>Nascimento</th>
                            <th>Tipo</th>
                            <th>Adotar</th>
                        </tr>
                    </thead>
                    <tbody>
                        <%@pets.each do |pet|%>
                        <tr>
                            <td><%=pet.name%></td>
                            <td><%=pet.date_of_birth%></td>
                            <td><%=pet.pet_type%></td>
                            <% if pet.adoption %>
                            <td>Pet Ja adotado</td>
                            <% else %>
                            <td><%= link_to "Adotar", new_pet_adoption_path(pet), class: 'btn btn-sm btn-info' %>
                            </td>
                            <% end %>
                        </tr>
                        <% end %>
                    </tbody>
                </table>
            </div>
            <%else%>
            <div class="text-center">
                Nenhum Pet Cadstrado
            </div>
            <%end%>
        </div>
    </div>
</div>